root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
trim_trailing_white_space_on_save = true
draw_white_space = all

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[**.blade.php]
indent_style = space
indent_size = 2